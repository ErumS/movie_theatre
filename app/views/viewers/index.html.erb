<!DOCTYPE html>
<html>  
  <head>
    <title>Viewer</title>
    <link href="/assets/viewers_manifest.css" media="all" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div id="index_view">
      <h3>Listing viewers</h3>
      <div class="hidden">
        <table class="viewer" cellpadding="10">
          <tr>
            <th>Name</th>
            <th>Link</th>
          </tr>
          <tr id="template">
            <td id="name"></td>
            <td id="show"></td>
            <td id="delete"></td>
          </tr>
        </table>
      </div>
    </div> 

    <div id="show_view">
      <div class="hidden">
        <table id="show_template"" cellpadding="10">
          <tr>
            <td>Name:</td> <td id="name"></td>
          </tr>
          <tr>
            <td>Phone Number:</td> <td id="phone_no"></td>
          </tr>
          <tr>
            <td>Mode of Payment:</td> <td id="mode_of_payment"></td>
          </tr>
          <tr>
            <td id="back"></td> 
          </tr>
        </table>
      </div>
    </div>

  </body>
</html>
